<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">library.book.view.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,available"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="author_id"/>
                            <field name="category"/>
                        </group>
                        <group>
                            <field name="date_published"/>
                            <field name="isbn"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="active" invisible="1"/> 
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description_page">
                            <field name="description"/>
                        </page>
                        <page string="Extra Info" name="extra_info_page">
                            <group>
                                <group>
                                    <field name="cover_price"/>
                                </group>
                                <group>
                                    <field name="pages"/>
                                    <field name="weight"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="library_book_view_list" model="ir.ui.view">
        <field name="name">library.book.view.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" decoration-danger="state == 'lost'" decoration-success="state == 'available'">
                <field name="name"/>
                <field name="author_id"/>
                <field name="category"/>
                <field name="date_published" optional="show"/>
                <field name="isbn" optional="hide"/>
                <field name="tag_ids" widget="many2many_tags" optional="hide" options="{'color_field': 'color'}"/>
            </list>
        </field>
    </record>

    <record id="library_book_view_search" model="ir.ui.view">
        <field name="name">library.book.view.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="author_id"/>
                <field name="isbn"/>

                <filter name="filter_draft" string="Draft" domain="[('state', '=' , 'draft')]"/>
                <filter name="filter_available" string="Available" domain="[('state', '=' , 'available')]"/>
                <filter name="filter_lost" string="Lost" domain="[('state', '=' , 'lost')]"/>
                <separator/>
                <filter name="filter_fiction" string="Fiction" domain="[('category', '=' , 'fiction')]"/>
                <filter name="filter_non_fiction" string="Non Fiction" domain="[('category', '=' , 'non_fiction')]"/>
                <separator/>
                <filter name="filter_kids_section" string="Kids Section" domain="[('category','=','fiction'),('state','=','available')]"/>

                <group expand="0" string="Group By">
                    <filter name="group_category" string="Category" context="{'group_by':'category'}"/>
                    <filter name="group_author" string="Author" context="{'group_by':'author_id'}"/>
                    <filter name="group_state" string="Status" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="library_book_view_search"/>
        <field name="context">{'search_default_filter_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first book!
            </p>
        </field>
    </record>
</odoo>